
<section class="charts">
  <div class="container-fluid">
    <header>
      <h1 class="h3">All Leads</h1>
    </header>
    <div class="row">
      <%= form_tag('/leads', method: :get) do %>
        <%= text_field_tag :search %>
        <%= submit_tag "Search" %>
      <% end %>

    </div>
    <div class="row">
      <div class="table-responsive leads-table">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Created</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Hot?</th>
              <th>Appointment Date</th>
              <th>Processed Within</th>
            </tr>
          </thead>
          <tbody>
            <% @leads.each do |lead| %>
              <tr>
                <td><%= lead.created_at.strftime("%A %b %e, %l:%M %p") %></td>
                <td><%= lead.first_name %></td>
                <td><%= lead.last_name %></td>
                <td><%= link_to(lead.email, edit_lead_path(lead), data: { turbolinks: false }) %></td>
                <td><%= lead.phone %></td>
                <td><%= lead.hot %></td>
                <td><%= lead.appointment_date ? lead.appointment_date.strftime("%A %b %e, %l:%M %p") : nil %></td>
                <td><%= lead.processed_within_minutes ? "#{lead.processed_within_minutes} minutes" : "not called" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>


    </div>
  </div>
</section>